	default I2C_0_NRF_TWIM

endchoice

endif # I2C_0

if I2C_1

choice I2C_1_NRF_TYPE
	default I2C_1_NRF_TWIM

endchoice

endif # I2C_1

endif # I2C

if ADC

config ADC_NRFX_SAADC
	def_bool y

if ADC_NRFX_SAADC

config ADC_0
	def_bool y

endif # ADC_NRFX_SAADC

endif # ADC

endif # BOARD_DEGU_EVK
